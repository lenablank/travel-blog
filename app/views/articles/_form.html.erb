<% if @article.errors.any? %>
 <h2>The following errors prevented the article from saving:</h2>
   <ul>
      <% @article.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
      <% end %>
   </ul>
<% end %>

<div class="row">
  <div class="col">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
       <div class="control-label" style="width: 400px;">
        <%= f.label :title %>
       </div>
       <div class="col">
        <%= f.text_field :title, class: "form-control", placeholder: "Short and clear, main idea", autofocus: true %>
       </div>
      </div>
      <div class="form-group">
       <div class="control-label">
        <%= f.label :description %>
       </div>
       <div class="col">
        <%= f.text_area :body, rows: 10, class: "form-control", placeholder: "What you liked the most/least about your trip" %>
       </div>
      </div>
      <div class="form-group">
       <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-primary btn-large' %>
       </div>
      </div>
    <% end %>
  </div>
</div>
